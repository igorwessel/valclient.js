{
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": "src",
        "module": "ES2020",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "outDir": "dist/esm",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@utils": ["./utils"],
            "@utils/*": ["./utils/*"],
            "@type/*": ["./types/*"],
            "@resources": ["./resources"],
            "@resources/*": ["./resources/*"],
            "@errors/*": ["./errors/*"],
            "@interfaces/*": ["./interfaces/*"],
            "@app/*": ["./*"],
            "@tests/*": ["../__tests__/*"]
        },
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths"
            }
        ]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "include": ["src/**/*.ts", "__tests__/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
